{% extends 'base.html.twig' %}

{% block h1 %}Tasks
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_tasks_index') }}">back to list</a>
		<a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>
		{{ include('tasks/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ task.id }}</td>
			</tr>
			<tr>
				<th>Task</th>
				<td>{{ task.task }}</td>
			</tr>
			<tr>
				<th>Order</th>
				<td>{{ task.order }}</td>
			</tr>
			<tr>
				<th>Priority</th>
				<td>{{ task.priority }}</td>
			</tr>
			<tr>
				<th>Urgency</th>
				<td>{{ task.urgency }}</td>
			</tr>
			<tr>
				<th>Duration</th>
				<td>{{ task.duration }}</td>
			</tr>
			<tr>
				<th>Est</th>
				<td>{{ task.est }}</td>
			</tr>
			<tr>
				<th>Eta</th>
				<td>{{ task.eta ? task.eta|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Completed</th>
				<td>{{ task.completed ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CompletedAt</th>
				<td>{{ task.completedAt ? task.completedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>WorkLoggable</th>
				<td>{{ task.workLoggable ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
