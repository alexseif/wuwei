{% extends 'base.html.twig' %}

{% block h1 %}Transactions{% endblock %}

{% block body %}
    <h1>Transactions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ transaction.type }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ transaction.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transactions_index') }}">back to list</a>

    <a href="{{ path('app_transactions_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transactions/_delete_form.html.twig') }}
{% endblock %}
