{% extends 'base.html.twig' %}

{% block h1 %}Schedule index
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_schedule_new') }}">Create new</a>
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Est</th>
				<th>Eta</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for schedule in schedules %}
				<tr>
					<td>{{ schedule.id }}</td>
					<td>{{ schedule.est }}</td>
					<td>{{ schedule.eta ? schedule.eta|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_schedule_show', {'id': schedule.id}) }}">show</a>
						<a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
