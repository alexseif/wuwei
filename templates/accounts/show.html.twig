{% extends 'base.html.twig' %}

{% block h1 %}Account: #{{ account.id }}
	{{ account.name }}
{% endblock %}
{% block card_actions %}
	<twig:Link:Back link="{{ path('app_accounts_index') }}"/>
	<twig:Link:Edit link="{{ path('app_accounts_edit', {'id': account.id}) }}"/>
	{{ include('accounts/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ account.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ account.name }}</td>
			</tr>
			<tr>
				<th>Conceal</th>
				<td>
					<twig:Badge:Conceal conceal="{{ account.conceal }}"/>
				</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<hr/>
	<h2>Accounts</h2>
	{% include 'task_lists/_table.html.twig' with {'task_lists': account.taskLists} %}
{% endblock %}
