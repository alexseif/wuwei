{% extends 'base.html.twig' %}

{% block h1 %}Account: #{{ account.id }}
	{{ account.name }}
{% endblock %}
{% block card_actions %}
	{{ back_link(path('app_accounts_index'))}}
	{{ edit_link(path('app_accounts_edit', {'id': account.id}))}}
	{{ include('accounts/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ account.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ account.name }}</td>
			</tr>
			<tr>
				<th>Conceal</th>
				<td>{{ badge_conceal(account.conceal) }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
