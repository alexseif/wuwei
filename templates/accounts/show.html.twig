{% extends 'base.html.twig' %}

{% block h1 %}Accounts
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_accounts_index') }}">back to list</a>

		<a href="{{ path('app_accounts_edit', {'id': account.id}) }}">edit</a>

		{{ include('accounts/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ account.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ account.name }}</td>
			</tr>
			<tr>
				<th>Conceal</th>
				<td>{{ account.conceal ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
