{% extends 'base.html.twig' %}
{% block card_header %}
	<div class="card-header d-flex align-items-center justify-content-between">
		<h1 class="card-title me-5">
			Account: #{{ account.id }}
			{{ account.name }}
		</h1>
		<div class="card-content d-flex flex-grow-1">
			<twig:Badge:Conceal conceal="{{ account.conceal }}"/>

		</div>
		<div class="card-actions btn-toolbar ms-5">
			<twig:Link:Back link="{{ path('app_accounts_index') }}"/>
			<twig:Link:Edit link="{{ path('app_accounts_edit', {'id': account.id}) }}"/>
			{{ include('accounts/_delete_form.html.twig') }}
		</div>
	</div>
	<!-- .card-header -->
{% endblock %}


{% block body %}
	<div class="card-body">
		<h2>Task Lists</h2>
		{% include 'task_lists/_table.html.twig' with {'task_lists': account.taskLists} %}
	</div>
	<div class="card-footer text-end">
		<span title="Created At" class="badge">
			{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}
		</span>
		<span title="Updated At" class="badge">{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</span>
	</div>
{% endblock %}
