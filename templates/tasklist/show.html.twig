{% extends 'base.html.twig' %}

{% block h1 %}Task List: {{ tasklist.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_tasklist_index') }}" class="btn btn-link">back</a>
    <a href="{{ path('app_tasklist_edit', {'id': tasklist.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('tasklist/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tasklist.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ tasklist.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ tasklist.createdAt ? tasklist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ tasklist.updatedAt ? tasklist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
