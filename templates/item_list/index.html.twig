{% extends 'base.html.twig' %}

{% block title %}ItemList index{% endblock %}

{% block body %}
    <h1>ItemList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_list in item_lists %}
            <tr>
                <td>{{ item_list.id }}</td>
                <td>{{ item_list.name }}</td>
                <td>
                    <a href="{{ path('app_item_list_show', {'id': item_list.id}) }}">show</a>
                    <a href="{{ path('app_item_list_edit', {'id': item_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_list_new') }}">Create new</a>
{% endblock %}
