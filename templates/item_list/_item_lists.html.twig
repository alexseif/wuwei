{# <h2>Items</h2> #}
{% for itemList in itemLists %}
	<div class="col" {{ ("شعار المرحلة" == itemList.name)? "dir='rtl'" : "" }}>
		<h4>{{ itemList.name }}</h4>
		<div class="items d-flex flex-wrap flex-column">
			{% for item in itemList.items %}
				<div class="card goal flex-fill">
					<div class="card-body">
						<div class="card-title">
							{% include 'item/_item.html.twig' %}
						</div>
					</div>
				</div>
				<!-- .list-group-item -->
			{% endfor %}
		</div>
	</div>
{% endfor %}
