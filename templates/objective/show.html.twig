{% extends 'base.html.twig' %}

{% block h1 %}Objective:
	{{ objective.name }}
{% endblock %}
{% block card_actions %}
	{{ include('components/Link/Back.html.twig', {'name': 'objective'}) }}
	{{ include('components/Link/Edit.html.twig', {'name': 'objective', 'id': objective.id}) }}
	{{ include('objective/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	{% if objective.description %}
		<div class="card-body">
			<p>
				{{ objective.description }}
			</p>
		</div>
	{% endif %}
	<div class="card-footer text-end">
		{{ include('components/Badge/Timestamps.html.twig', {'entity': objective}) }}
	</div>
{% endblock %}
