{% extends 'base.html.twig' %}

{% block h1 %}Contract
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_contract_index') }}">back to list</a>
		<a href="{{ path('app_contract_edit', {'id': contract.id}) }}">edit</a>
		{{ include('contract/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ contract.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ contract.name }}</td>
			</tr>
			<tr>
				<th>HoursPerDay</th>
				<td>{{ contract.hoursPerDay }}</td>
			</tr>
			<tr>
				<th>StartedAt</th>
				<td>{{ contract.startedAt ? contract.startedAt|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>IsCompleted</th>
				<td>{{ contract.isCompleted ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CompletedAt</th>
				<td>{{ contract.completedAt ? contract.completedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>BilledOn</th>
				<td>{{ contract.billedOn }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ contract.createdAt ? contract.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ contract.updatedAt ? contract.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
