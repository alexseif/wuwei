<div class="list-group-item task {{ task.completed ? 'completed' : '' }} {{ (task.priority)? 'important' : '' }} {{ (task.urgency)? 'urgent' : '' }}" data-order="{{ task.order }}" data-id="{{ task.id }}" {% for key,value in task.toArray %} data-{{ key }}="{{ value }}" {% endfor %}>
	<label class="btn">
		<input type="checkbox" data-id="{{ task.id }}" data-duration="{{ task.duration }}" class="task-checkbox" {{ task.completed ? 'checked' : ''}} value="1"/>
	</label>
	<span class="flex-grow-1">
		{{ include('components/Link/Entity.html.twig', {'name': 'tasks', 'entity': task, 'class':'fw-bold btn btn-sm'}) }}<br/>
		{{ include('components/Badge/Priority.html.twig', {'priority': task.priority}) }}
		{{ include('components/Badge/Urgency.html.twig', {'urgency': task.urgency}) }}
		{{ include('components/Link/Entity.html.twig', {'name': 'task_lists', 'entity': task.taskList}) }}
		{{ include('components/Link/Entity.html.twig', {'name': 'accounts', 'entity': task.taskList.account}) }}
		{{ include('components/Link/Entity.html.twig', {'name': 'client', 'entity': task.taskList.account.client}) }}
	</span>
	<span>
		{{ (task.completed) ? task.duration : task.est }}m
		<br/>
		{{ (task.completed) ? task.completedAt|date : (task.eta ? task.eta|date('Y-m-d H:i:s') : '') }}
	</span>
	<span>
		{{ include('components/Badge/Timestamps.html.twig', {'entity': task}) }}
	</span>
	<span>
		{{ include('components/Link/Edit.html.twig', {'name': 'tasks', 'id': task.id }) }}
	</span>
</div>
