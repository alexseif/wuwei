<div class="day card m-3 mx-auto {{ day.complete ? 'completed' : '' }}">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title">
			{{ include('components/Link/Entity.html.twig', {'name': 'days', 'entity': day}) }}
		</h3>
		<div class="">
			<span class="fs-5 badge {{ (day.deadline and day.deadline < 'now'|date_modify('+3 days')) ? 'bg-danger' : (day.deadline and day.deadline < 'now'|date_modify('+2 weeks')) ? 'bg-warning' }}">
				{{ day.deadline ? day.deadline|time_diff : '' }}
			</span><br/>
			{{ day.deadline|date('Y-m-d') }}
		</div>
	</div>
	<div class="card-body">
		<label>
			<input type="checkbox" name="complete" id="complete" {{ day.complete ? 'checked' : '' }}/>
			Complete
		</label>
	</div>
	<!-- ./card-body -->
	<div class="card-footer d-flex justify-content-between">
		{{ include('components/Link/Edit.html.twig', {'name': 'days', 'id': day.id}) }}
		{{ include('components/Badge/Timestamps.html.twig', {'entity': day}) }}
	</div>
</div>
<!-- ./card -->
