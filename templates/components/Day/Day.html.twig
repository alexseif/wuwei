<div class="day card m-3 mx-auto {{ day.complete ? 'completed' : '' }}">
	<div class="card-header d-flex justify-content-between align-items-center">
		<label class="card-title">
			<input type="checkbox" name="complete" {{ day.complete ? 'checked' : '' }} data-id="{{ day.id }}"/>
			{{ include('components/Link/Entity.html.twig', {'name': 'days', 'entity': day}) }}
		</label>
		<div class="d-flex flex-column align-items-end">
			{{ include('components/Badge.html.twig', {'text': day.deadline|time_diff, "class": "badge (day.deadline and day.deadline < 'now'|date_modify('+3 days')) ? 'bg-danger' : (day.deadline and day.deadline < 'now'|date_modify('+2 weeks')) ? 'bg-warning'" }) }}
			{{ include('components/Badge.html.twig', {'text': day.deadline|date('Y-m-d'), "class": "badge (day.deadline and day.deadline < 'now'|date_modify('+3 days')) ? 'bg-danger' : (day.deadline and day.deadline < 'now'|date_modify('+2 weeks')) ? 'bg-warning'" }) }}
		</div>
	</div>
	<!-- ./card-body -->
	<div class="card-body d-flex justify-content-between">
		{{ include('components/Link/Edit.html.twig', {'name': 'days', 'id': day.id}) }}
		{{ include('components/Badge/Timestamps.html.twig', {'entity': day}) }}
	</div>
</div>
<!-- ./card -->
