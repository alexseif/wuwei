{% extends 'base.html.twig' %}

{% block h1 %}Client: #{{ client.id }}
	{{ client.name }}
{% endblock %}
{% block card_actions %}
	<twig:Link:Back link="{{ path('app_client_index') }}"/>
	<twig:Link:Edit link="{{ path('app_client_edit', {'id': client.id}) }}"/>
	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ client.name }}</td>
			</tr>
			<tr>
				<th>Enabled</th>
				<td>
					<twig:Badge:Enabled enabled="{{ client.enabled }}"/>
				</td>
			</tr>
			<tr>
				<th>BillingOption</th>
				<td>
					{% for name,option in client.billingOption %}
						{{name}}:
						{{ option }}<br/>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<hr/>
	<h2>Accounts</h2>
	{% include 'accounts/_table.html.twig' with {'accounts': client.accounts} %}

{% endblock %}
