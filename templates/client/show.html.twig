{% extends 'base.html.twig' %}

{% block h1 %}Client:
				#{{ client.id }}
	{{ client.name }}
{% endblock %}
{% block card_actions %}
	{{ back_link(path('app_client_index')) }}
	{{ edit_link(path('app_client_edit', {'id': client.id})) }}
	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ client.name }}</td>
			</tr>
			<tr>
				<th>Enabled</th>
				<td>{{ badge_enabled(client.enabled) }}</td>
			</tr>
			<tr>
				<th>BillingOption</th>
				<td>
					{% for name,option in client.billingOption %}
						{{name}}:
						{{ option }}<br/>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ client.status }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
