{% extends 'base.html.twig' %}

{% block h1 %}Proposals{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Proposals</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for proposal in proposals %}
                <tr>
                    <td>{{ proposal.title }}</td>
                    <td>{{ proposal.date|date('Y-m-d') }}</td>
                    <td>{{ proposal.code }}</td>
                    <td>
                        <a href="{{ path('app_proposals_show', { id: proposal.id }) }}" class="btn btn-info">View</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_proposals_new') }}">Create new</a>
{% endblock %}
