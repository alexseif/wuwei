{% block h1 %}Proposals{% endblock %}

{% block body %}
    <h1>Proposals</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proposal.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ proposal.title }}</td>
            </tr>
