{% extends 'base.html.twig' %}

{% block h1 %}TaskLists
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_task_lists_index') }}">back to list</a>
		<a href="{{ path('app_task_lists_edit', {'id': task_list.id}) }}">edit</a>
		{{ include('task_lists/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ task_list.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ task_list.name }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ task_list.status }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ task_list.createdAt ? task_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ task_list.updatedAt ? task_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
