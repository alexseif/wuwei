<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Account</th>
			<th>Client</th>
			<th>Status</th>
			<th>Timestamps</th>
			<th>actions</th>
		</tr>
	</thead>
	<tbody>
		{% for task_list in task_lists %}
			<tr>
				<td>
					{{ include('components/Link/Entity.html.twig', {'name': 'task_lists', 'entity': task_list}) }}
				</td>
				<td>
					{{ (task_list.account is not null) ? include('components/Link/Entity.html.twig', {
						'name': 'accounts',
						'entity': task_list.account
					}) : '' }}
				</td>
				<td>
					{{ (task_list.account is not null) ? include('components/Link/Entity.html.twig', {
						'name': 'client',
						'entity': task_list.account.client
					}) : '' }}
				</td>
				<td>{{ task_list.status }}</td>
				<td>{{ include('components/Badge/Timestamps.html.twig', {'entity': task_list}) }}</td>
				<td>
					<twig:Link:Show link="{{ path('app_task_lists_show', {'id': task_list.id}) }}"/>
					<twig:Link:Edit link="{{ path('app_task_lists_edit', {'id': task_list.id}) }}"/>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
