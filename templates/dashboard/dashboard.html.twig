{% extends 'base.html.twig' %}

{% block title %}
    Welcome to WuWei
{% endblock %}

{% block body %}
    <div class="row align-items-stretch">
        <div class="col">
            {% for itemList in itemLists %}
                <div class="card" {{ ("شعار المرحلة" == itemList.name)? "dir='rtl'" : "" }}>
                    <div class="card-header"><h2>{{ itemList.name }}</h2></div>
                    <div class="list-group">
                        {% for item in itemList.items %}
                            <div class="list-group-item">
                                {% include 'item/_item.html.twig' %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <hr/>
            {% endfor %}
        </div>
        <div class="col">
            {% include 'daily/_daily.html.twig'%}
        </div>
    </div>

{% endblock %}
