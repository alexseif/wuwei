{% extends 'base.html.twig' %}

{% block h1 %}Time System{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_time_system_new') }}" class="btn btn-outline-light">Create new</a>
{% endblock %}
{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>From_time</th>
            <th>To_time</th>
            <th>Tags</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for time_system in time_systems %}
            <tr>
                <td>{{ time_system.id }}</td>
                <td>{{ time_system.name }}</td>
                <td>{{ time_system.fromTime ? time_system.fromTime|date('H:i:s') : '' }}</td>
                <td>{{ time_system.toTime ? time_system.toTime|date('H:i:s') : '' }}</td>
                <td>{{ time_system.tags|join(', ') }}</td>
                <td>{{ time_system.createdAt ? time_system.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ time_system.updatedAt ? time_system.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_time_system_show', {'id': time_system.id}) }}">show</a>
                    <a href="{{ path('app_time_system_edit', {'id': time_system.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
