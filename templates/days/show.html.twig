{% extends 'base.html.twig' %}

{% block h1 %}Days
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_days_index') }}">back to list</a>
		<a href="{{ path('app_days_edit', {'id': day.id}) }}">edit</a>
		{{ include('days/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ day.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ day.name }}</td>
			</tr>
			<tr>
				<th>Deadline</th>
				<td>{{ day.deadline ? day.deadline|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Complete</th>
				<td>{{ day.complete ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ day.createdAt ? day.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ day.updatedAt ? day.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
