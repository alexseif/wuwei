{% extends 'base.html.twig' %}

{% block h1 %}Day:
	{{ day.name}}
	-
	{{ day.deadline ? day.deadline|date('Y-m-d') : '' }}
{% endblock %}
{% block card_actions %}
	{{ include('components/Link/Back.html.twig', {'name': 'days'}) }}
	{{ include('components/Link/Edit.html.twig', {'name': 'days', 'id': day.id}) }}
	{{ include('days/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Complete</th>
				<td>
					{{ day.complete ? 'Yes' : 'No' }}
				</td>
			</tr>
		</tbody>
	</table>
	<div class="card-footer text-end">
		{{ include('components/Badge/Timestamps.html.twig', {'entity': day}) }}
	</div>
{% endblock %}
