<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ block('h1')|striptags }}{% endblock %} | myApp</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div id="flower">
    <img src="/imgs/flower.png" alt="flower for beauty and grace in what you do"/>
</div>
{% block page %}
    <header class="bg-dark">
        {% block nav %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% include '_navbar.html.twig' %}
            {% endif %}
        {% endblock %}
    </header>
    {% block container %}
        <div class="container">
            <div class="card">
                {% block card_header %}
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h1 class="card-title">{% block h1 %}{% endblock %}</h1>
                        <div class="card-actions btn-toolbar">{% block card_actions %}{% endblock %}</div>
                    </div><!-- .card-header -->
                {% endblock %}
                {% block body %} {% endblock %}
                {% block card_footer %}{% endblock %}
            </div><!-- .card -->
        </div><!-- .container -->
    {% endblock %}
{% endblock %}
</body>
</html>
