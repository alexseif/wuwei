{% extends 'base.html.twig' %}

{% block h1 %}Tag Type: #{{ tag_type.id }}
	{{ tag_type.name }}
{% endblock %}
{% block card_actions %}
	{{ include('components/Link/Back.html.twig', {'name': 'tag_type'}) }}
	{{ include('components/Link/Edit.html.twig', {'name': 'tag_type', 'id':tag_type.id }) }}
	{{ include('tag_type/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<div class="card-body">
		{% include'tag/_tags.html.twig' %}
	</div>
	<div class="card-footer text-end">
		{{ include('components/Badge/Timestamps.html.twig', {'entity': tag_type}) }}
        
		<a href="{{ path('app_tag_new', {'tagType': tag_type.id}) }}" class="btn btn-outline-light float-end">
			Create New Tag
		</a>
	</div>
{% endblock %}
