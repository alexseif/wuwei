{% extends 'base.html.twig' %}

{% block container %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center mt-5 pt-5">
			<div class="card">
				<div class="card-header d-flex align-items-center justify-content-between">
					<h1 class="card-title flex-grow-1 w-75">
						{% block h1 %}Wuwei
						{% endblock %}
					</h1>
					<div class="card-actions">
						{% if app.user %}
							{# You are logged in as #}
							{# {{ app.user.userIdentifier }} #}
                            {{ include('components/Link.html.twig', {'text': 'Logout', 'link': path('app_logout')})}}
						{% endif %}
					</div>
				</div>
				<!-- .card-header -->

				<form method="post">
					<div class="card-body">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<div class="mb-3">
							<label class="form-label" for="inputEmail">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div class="mb-3">
							<label class="form-label" for="inputPassword">Password</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>
					<div class="card-footer d-flex justify-content-between">
						<div>
							<label class="form-check form-switch">
								<span class="btn btn-link text-white">
									<input class="form-check-input" type="checkbox" name="_remember_me" checked>
									<span class="form-check-label">Remember me</span>
								</span>
							</label>
							<a href="{{ path('app_forgot_password_request') }}" class="btn btn-link text-primary">
								<i class="bi bi-lock"></i>
								Reset password
							</a>
						</div>
						<div>
							<button class="btn btn-link text-success" type="submit">
								Sign in
							</button>
						</div>
					</div>
				</form>

			</div>
			<!-- .card -->

		</div>
	</div>
	<!-- .container -->
{% endblock %}
