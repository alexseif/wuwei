{% extends 'base.html.twig' %}
{# templates/daily/choose_items.html.twig #}

{% block title %}
    Choose Items to Migrate to {{ daily.name }}
{% endblock %}

{% block body %}
    {# TODO: make into a form #}
    <form action="{{ path('app_migrate_items', { 'id': daily.id }) }}" method="post">
        <h1>Previous Daily Items: {{ daily.name }}</h1>
        <div class="w-50">
            <div class="list-group mb-3">
                {% for item in previousItems %}
                    <div class="list-group-item">
                        <div class="form-check">
                            <label for="item_{{ item.id }}" class="form-check-label required">{{ item.name }}</label>
                            <input type="checkbox" class="form-check-input" id="item_{{ item.id }}" name="items[]"
                                   value="{{ item.id }}">
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <button type="submit">Migrate Selected Items</button>
        <a href="{{ path('app_daily_show', {'id' : daily.id}) }}">back to daily</a>
    </form>
{% endblock %}
