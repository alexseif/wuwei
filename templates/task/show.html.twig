{% extends 'base.html.twig' %}

{% block h1 %}Task: {{ task.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_task_index') }}" class="btn btn-link">back to list</a>
    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ task.position }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ task.priority }}</td>
            </tr>
            <tr>
                <th>Urgency</th>
                <td>{{ task.urgency }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ task.duration }}</td>
            </tr>
            <tr>
                <th>Est</th>
                <td>{{ task.est }}</td>
            </tr>
            <tr>
                <th>Eta</th>
                <td>{{ task.eta ? task.eta|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{{ task.completed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CompletedAt</th>
                <td>{{ task.completedAt ? task.completedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DueAt</th>
                <td>{{ task.dueAt ? task.dueAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ task.details ? task.details|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
