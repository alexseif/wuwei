<div class="pagination mb-3">
	<ul class="pagination">
		{% if pagination.hasPrevious() %}
			<li class="page-item">
				<a class="page-link" href="{{ pagination.getPreviousUrl() }}" rel="prev">Previous</a>
			</li>
		{% endif %}
		{% for page in pagination.getPages() %}
			<li class="page-item {% if page == pagination.getCurrentPage() %}active{% endif %}">
				<a class="page-link" href="{{ page.url }}">{{ page.number }}</a>
			</li>
		{% endfor %}
		{% if pagination.hasNext() %}
			<li class="page-item">
				<a class="page-link" href="{{ pagination.getNextUrl() }}" rel="next">Next</a>
			</li>
		{% endif %}
	</ul>
</div>
