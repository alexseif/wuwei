{% extends 'base.html.twig' %}

{% block h1 %}Goal: {{ goal.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_goal_index') }}" class="btn btn-link">back</a>
    <a href="{{ path('app_goal_edit', {'id': goal.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('goal/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ goal.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ goal.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ goal.createdAt ? goal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ goal.updatedAt ? goal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
