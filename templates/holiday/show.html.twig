{% extends 'base.html.twig' %}

{% block h1 %}Holiday
{% endblock %}
{% block card_actions %}
	{{ include('components/Link/Back.html.twig', {'name': 'holiday'}) }}
	{{ include('components/Link/Edit.html.twig', {'name': 'holiday', 'id': holiday.id}) }}
	{{ include('holiday/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ holiday.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ holiday.name }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ holiday.type }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
