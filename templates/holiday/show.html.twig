{% extends 'base.html.twig' %}

{% block h1 %}Holiday
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_holiday_index') }}">back to list</a>
		<a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}">edit</a>
		{{ include('holiday/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ holiday.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ holiday.name }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ holiday.type }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
