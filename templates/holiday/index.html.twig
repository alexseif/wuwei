{% extends 'base.html.twig' %}

{% block h1 %}Holiday index
{% endblock %}
{% block card_actions %}
	<div>
		<a href="{{ path('app_holiday_new') }}">Create new</a>
	</div>
{% endblock %}
{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Type</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for holiday in holidays %}
				<tr>
					<td>{{ holiday.id }}</td>
					<td>{{ holiday.name }}</td>
					<td>{{ holiday.type }}</td>
					<td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_holiday_show', {'id': holiday.id}) }}">show</a>
						<a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
