{% extends 'base.html.twig' %}

{% block h1 %}Account: {{ account.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_account_index') }}" class="btn btn-link">back</a>
    <a href="{{ path('app_account_edit', {'id': account.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ account.name }}</td>
        </tr>
        <tr>
            <th>Client</th>
            <td>
                <a href="{{ path('app_client_show', {'id': account.client.id}) }}">
                    {{ account.client }}
                </a>
            </td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ account.status }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ account.enabled ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
