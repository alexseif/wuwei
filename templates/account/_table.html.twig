<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Account Tag</th>
        <th>Tags</th>
        <th>Status</th>
        <th>Enabled</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for account in accounts %}
        <tr>
            <td>{{ account.name }}</td>
            <td>{{ account.accountTag }}</td>
            <td>{{ account.tags|join(', ') }}</td>
            <td>{{ account.status }}</td>
            <td>{{ account.enabled ? 'Yes' : 'No' }}</td>
            <td>
                <a href="{{ path('app_account_show', {'id': account.id}) }}">show</a>
                <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
