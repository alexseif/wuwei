{% extends 'base.html.twig' %}

{% block h1 %}Tag: {{ tag.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_tag_index') }}" class="btn btn-link">back</a>
    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tag.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ tag.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
