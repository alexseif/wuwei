<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for tag in tags %}
        <tr>
            <td>{{ tag.name }}</td>
            <td>
                <a href="{{ path('app_tag_type_show', {'id': tag.tagType.id}) }}" class="btn btn-link">
                    {{ tag.tagType }}
                </a>
            </td>
            <td>
                <a href="{{ path('app_tag_show', {'id': tag.id}) }}">show</a>
                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
