{% extends 'base.html.twig' %}

{% block h1 %}Item: {{ item.name }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_item_index') }}" class="btn btn-link">back</a>
    <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-outline-light">edit</a>
    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ item.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ item.name }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
