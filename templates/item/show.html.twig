{% extends 'base.html.twig' %}

{% block h1 %}Item:
	{{ item.name }}
{% endblock %}
{% block card_actions %}
	{{ include('components/Link/Back.html.twig', {'name':'item'}) }}
	{{ include('components/Link/Edit.html.twig', {'name':'item', 'id': item.id}) }}
	{{ include('item/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ item.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ item.name }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
